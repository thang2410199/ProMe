                <CompositeTransform x:Name="transformD" Rotation="0" />
            </Border.RenderTransform>
        </Border>-->

        <Grid x:Name="Indicator"
              Grid.Row="1"
              Height="100"
              Margin="0,0,0,20"
              HorizontalAlignment="Center"
              VerticalAlignment="Bottom">
            <Ellipse Width="80"
                     Height="80"
                     Margin="0,0,-120,0"
                     VerticalAlignment="Top"
                     Stroke="Gray"
                     StrokeThickness="4">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="ms-appx:///Assets/Demo/H.png" />
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Width="80"
                     Height="80"
                     Margin="-120,0,0,0"
                     VerticalAlignment="Top"
                     Stroke="Gray"
                     StrokeThickness="4">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="ms-appx:///Assets/Demo/X.png" />
                </Ellipse.Fill>
            </Ellipse>

            <Ellipse Width="80"
                     Height="80"
                     Margin="0,20,-2,0"
                     Fill="White"
                     Stroke="Gray"
                     StrokeThickness="4" />

            <Ellipse Width="80"
                     Height="80"
                     Margin="0,20,-2,0"
                     Stroke="Gray"
                     StrokeThickness="4">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="ms-appx:///Assets/Demo/L.png" />
                </Ellipse.Fill>
            </Ellipse>
            <!--<Ellipse Width="60"
                     Height="60"
                     Margin="-6,0,0,0"
                     VerticalAlignment="Top"
                     Fill="Orange"
                     Stroke="Gray"
                     StrokeThickness="4" />-->
        </Grid>

        <TextBox Grid.Row="1"
                 Margin="10"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Bottom"
                 FontSize="16"
                 Foreground="Navy"
                 Text="Search your favorite shop" />
    </Grid>

